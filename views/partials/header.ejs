<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mock Quiz Hub</title>
    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        /* CSS Variables for Light/Dark Mode */
        :root {
            --github-primary-bg: #ffffff;
            --github-secondary-bg: #f6f8fa;
            --github-border: #d0d7de;
            --text-primary: #1c1d1f;
            --text-secondary: #656d76;
            --theme-button-bg: rgba(255, 255, 255, 0.9);
            --theme-button-border: rgba(255, 255, 255, 0.95);
            --theme-button-shadow: rgba(0, 0, 0, 0.08);
            --theme-button-shadow-hover: rgba(86, 36, 208, 0.25);
            --icon-shimmer: rgba(255, 255, 255, 0.6);
            --notification-color: #5624d0;
            --leaderboard-gradient: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
            --profile-gradient: linear-gradient(135deg, #5624d0 0%, #7e3ff2 100%);
            --status-online: #10b981;
            --notification-badge: #ef4444;
            --tooltip-bg: #ffffff;
            --tooltip-border: #e1e5e9;
            --tooltip-shadow: rgba(0, 0, 0, 0.1);
        }

        [data-theme="dark"] {
            --github-primary-bg: #0d1117;
            --github-secondary-bg: #161b22;
            --github-border: #21262d;
            --text-primary: #e6edf3;
            --text-secondary: #8b949e;
            --theme-button-bg: rgba(30, 30, 50, 0.9);
            --theme-button-border: rgba(60, 60, 80, 0.7);
            --theme-button-shadow: rgba(0, 0, 0, 0.4);
            --theme-button-shadow-hover: rgba(124, 58, 237, 0.4);
            --icon-shimmer: rgba(255, 255, 255, 0.3);
            --notification-color: #a78bfa;
            --leaderboard-gradient: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
            --profile-gradient: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%);
            --status-online: #34d399;
            --notification-badge: #f87171;
            --tooltip-bg: #1c2128;
            --tooltip-border: #30363d;
            --tooltip-shadow: rgba(0, 0, 0, 0.5);
        }

        /* Body styling */
        body {
            background-color: var(--github-primary-bg);
            color: var(--text-primary);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif;
            transition: background-color 0.3s ease, color 0.3s ease;
            margin: 0;
            padding: 0;
        }

        .no-style {
            text-decoration: none;
            color: inherit;
        }

        /* Premium Button Base Style */
        .premium-btn {
            background: var(--theme-button-bg);
            border: 1px solid var(--theme-button-border);
            border-radius: 16px;
            padding: 0.8rem;
            backdrop-filter: blur(20px);
            box-shadow: 
                0 8px 32px var(--theme-button-shadow),
                inset 0 1px 0 rgba(255, 255, 255, 0.5),
                0 1px 0 rgba(255, 255, 255, 0.6);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            color: var(--text-primary);
            cursor: pointer;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 52px;
            height: 52px;
            border: 2px solid transparent;
            text-decoration: none;
        }

        /* Advanced shimmer effect */
        .premium-btn::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: conic-gradient(from 0deg, transparent 0%, var(--icon-shimmer) 50%, transparent 100%);
            opacity: 0;
            transition: all 0.6s ease;
            animation: rotate 3s linear infinite;
        }

        @keyframes rotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Hover state with multiple effects */
        .premium-btn:hover {
            transform: translateY(-4px) scale(1.05);
            box-shadow: 
                0 16px 48px var(--theme-button-shadow-hover),
                inset 0 1px 0 rgba(255, 255, 255, 0.8),
                0 0 0 2px rgba(86, 36, 208, 0.3);
            text-decoration: none;
            border-color: rgba(86, 36, 208, 0.4);
            color: var(--text-primary);
        }

        .premium-btn:hover::before {
            opacity: 1;
        }

        /* Theme Toggle Specific Styling */
        .theme-toggle {
            gap: 0.6rem;
            width: auto;
            padding: 0.8rem 1.2rem;
            border-radius: 16px;
        }

        .theme-icon {
            font-size: 1.2rem;
            transition: transform 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            color: #5624d0 !important;
        }

        .theme-icon.switching {
            transform: rotate(360deg) scale(1.2);
        }

        .theme-text {
            font-weight: 600;
            font-size: 0.9rem;
            letter-spacing: 0.025em;
            color: var(--text-primary);
        }

        /* Individual icon styling - Ensuring visibility */
        .premium-btn i {
            font-size: 1.3rem;
            transition: all 0.3s ease;
            position: relative;
            z-index: 10;
            display: block;
            line-height: 1;
        }

        .notification-icon {
            color: #5624d0 !important;
        }

        .premium-btn:hover .notification-icon {
            color: #7c3aed !important;
            transform: scale(1.1);
        }

        .leaderboard-icon {
            color: #ff6b35 !important;
        }

        .premium-btn:hover .leaderboard-icon {
            color: #fbbf24 !important;
            transform: scale(1.1) rotate(5deg);
        }

        .profile-icon {
            color: #5624d0 !important;
        }

        .premium-btn:hover .profile-icon {
            color: #8b5cf6 !important;
            transform: scale(1.1);
        }

        .theme-icon {
            color: #5624d0 !important;
        }

        /* Enhanced status indicator */
        .profile-status {
            position: absolute;
            top: 4px;
            right: 4px;
            width: 14px;
            height: 14px;
            background: var(--status-online);
            border: 2px solid white;
            border-radius: 50%;
            box-shadow: 
                0 2px 8px rgba(16, 185, 129, 0.4),
                inset 0 1px 2px rgba(255, 255, 255, 0.3);
            animation: statusPulse 3s infinite;
        }

        @keyframes statusPulse {
            0%, 100% { 
                opacity: 1;
                transform: scale(1);
            }
            50% { 
                opacity: 0.7;
                transform: scale(1.1);
            }
        }

        /* Premium notification badge */
        .notification-badge {
            position: absolute;
            top: -4px;
            right: -4px;
            background: linear-gradient(135deg, var(--notification-badge) 0%, #dc2626 100%);
            color: white;
            font-size: 0.7rem;
            font-weight: 700;
            border-radius: 50%;
            width: 22px;
            height: 22px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 3px solid white;
            box-shadow: 
                0 4px 12px rgba(239, 68, 68, 0.4),
                inset 0 1px 2px rgba(255, 255, 255, 0.3);
            animation: badgePulse 2s infinite;
        }

        @keyframes badgePulse {
            0% {
                transform: scale(1);
                box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4), 0 0 0 0 rgba(239, 68, 68, 0.4);
            }
            70% {
                transform: scale(1.05);
                box-shadow: 0 4px 12px rgba(239, 68, 68, 0.6), 0 0 0 8px rgba(239, 68, 68, 0);
            }
            100% {
                transform: scale(1);
                box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4), 0 0 0 0 rgba(239, 68, 68, 0);
            }
        }

        /* Notification Tooltip */
        .notification-container {
            position: relative;
        }

        .notification-tooltip {
            position: absolute;
            top: 100%;
            right: 0;
            margin-top: 8px;
            background: var(--tooltip-bg);
            border: 1px solid var(--tooltip-border);
            border-radius: 12px;
            padding: 1rem;
            min-width: 280px;
            box-shadow: 
                0 12px 32px var(--tooltip-shadow),
                0 2px 8px rgba(0, 0, 0, 0.08);
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            z-index: 1000;
            backdrop-filter: blur(20px);
        }

        .notification-tooltip::before {
            content: '';
            position: absolute;
            top: -6px;
            right: 20px;
            width: 12px;
            height: 12px;
            background: var(--tooltip-bg);
            border: 1px solid var(--tooltip-border);
            border-bottom: none;
            border-right: none;
            transform: rotate(45deg);
        }

        .notification-container:hover .notification-tooltip,
        .notification-container:focus-within .notification-tooltip {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .notification-tooltip .fw-bold {
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .notification-tooltip .small {
            color: var(--text-secondary);
            line-height: 1.4;
        }

        .dropdown-divider {
            border-color: var(--github-border);
            margin: 0.5rem 0;
        }

        .dropdown-item-text {
            color: var(--text-secondary) !important;
        }

        /* Active/Focus states */
        .premium-btn:active {
            transform: translateY(-2px) scale(1.02);
            transition: all 0.1s ease;
        }

        .premium-btn:focus {
            outline: none;
            box-shadow: 
                0 8px 32px var(--theme-button-shadow),
                0 0 0 3px rgba(86, 36, 208, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.5);
        }

        /* Dark mode icon adjustments */
        [data-theme="dark"] .notification-icon {
            color: #a78bfa !important;
        }

        [data-theme="dark"] .premium-btn:hover .notification-icon {
            color: #c4b5fd !important;
        }

        [data-theme="dark"] .leaderboard-icon {
            color: #fbbf24 !important;
        }

        [data-theme="dark"] .premium-btn:hover .leaderboard-icon {
            color: #fcd34d !important;
        }

        [data-theme="dark"] .profile-icon {
            color: #a78bfa !important;
        }

        [data-theme="dark"] .premium-btn:hover .profile-icon {
            color: #c4b5fd !important;
        }

        [data-theme="dark"] .theme-icon {
            color: #a78bfa !important;
        }

        [data-theme="dark"] .premium-btn {
            box-shadow: 
                0 8px 32px var(--theme-button-shadow),
                inset 0 1px 0 rgba(255, 255, 255, 0.1),
                0 1px 0 rgba(255, 255, 255, 0.05);
        }

        [data-theme="dark"] .premium-btn:hover {
            box-shadow: 
                0 16px 48px var(--theme-button-shadow-hover),
                inset 0 1px 0 rgba(255, 255, 255, 0.2),
                0 0 0 2px rgba(124, 58, 237, 0.4);
        }

        [data-theme="dark"] .notification-badge {
            border-color: #1a1a2e;
        }

        [data-theme="dark"] .profile-status {
            border-color: #1a1a2e;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .container {
                padding-left: 1rem;
                padding-right: 1rem;
            }
            
            .d-flex.align-items-center.justify-content-between {
                gap: 0.5rem !important;
            }
            
            .premium-btn {
                width: 44px;
                height: 44px;
                padding: 0.6rem;
            }
            
            .theme-toggle {
                padding: 0.6rem 0.8rem;
                gap: 0.4rem;
            }
            
            .theme-text {
                font-size: 0.8rem;
            }
            
            .navbar-brand {
                font-size: 1.5rem !important;
                text-align: center;
            }
            
            .navbar-brand i {
                display: none; /* Hide graduation cap icon on mobile for more space */
            }
            
            .notification-icon,
            .leaderboard-icon,
            .profile-icon,
            .theme-icon {
                font-size: 1.1rem;
            }
            
            .notification-badge {
                width: 18px;
                height: 18px;
                font-size: 0.6rem;
                top: -3px;
                right: -3px;
            }
            
            .profile-status {
                width: 10px;
                height: 10px;
                top: 2px;
                right: 2px;
            }

            .notification-tooltip {
                min-width: 240px;
                right: -30px;
                padding: 0.8rem;
            }
            
            .notification-tooltip::before {
                right: 40px;
            }
        }

        @media (max-width: 576px) {
            .container {
                padding-left: 0.75rem;
                padding-right: 0.75rem;
            }
            
            .d-flex.align-items-center.justify-content-between {
                gap: 0.25rem !important;
            }
            
            .premium-btn {
                width: 40px;
                height: 40px;
                padding: 0.5rem;
            }
            
            .theme-toggle {
                padding: 0.5rem 0.7rem;
            }
            
            .theme-text {
                display: none; /* Hide theme text on very small screens */
            }
            
            .navbar-brand {
                font-size: 1.3rem !important;
            }
            
            .notification-icon,
            .leaderboard-icon,
            .profile-icon,
            .theme-icon {
                font-size: 1rem;
            }
            
            .notification-tooltip {
                min-width: 200px;
                right: -50px;
                font-size: 0.85rem;
            }
            
            .notification-tooltip::before {
                right: 60px;
            }
        }

        /* Loading animation for icons */
        .premium-btn.loading {
            pointer-events: none;
        }

        .premium-btn.loading i {
            animation: iconSpin 1s linear infinite;
        }

        @keyframes iconSpin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    
    <header class="py-4" style="background-color: var(--github-secondary-bg); border-bottom: 1px solid var(--github-border); transition: background-color 0.3s ease, border-color 0.3s ease;">
        <div class="container">
            <div class="d-flex align-items-center justify-content-between flex-wrap flex-md-nowrap" style="gap: 1rem; min-height: 56px;">
                <!-- Left: Theme Toggle -->
                <div class="theme-toggle-container order-1 order-md-1">
                    <button class="premium-btn theme-toggle" id="themeToggle" aria-label="Toggle theme">
                        <i class="theme-icon fas fa-moon" id="themeIcon"></i>
                        <span class="theme-text" id="themeText">Dark</span>
                    </button>
                </div>
                
                <!-- Center: Title -->
                <h1 class="navbar-brand mb-0 mx-auto order-2 order-md-2 text-center" style="font-size: 2rem; white-space: nowrap; flex: 1 1 0;">
                    <a href="/" class="no-style">
                        <i class="fas fa-graduation-cap me-2"></i>Mock Quiz Hub
                    </a>
                </h1>
                
                <!-- Right: Icons -->
                <div class="d-flex align-items-center order-3 order-md-3 ms-auto position-relative" style="gap: 1rem;">
                    
                    <!-- Notification Icon -->
                    <div class="notification-container">
                        <button class="premium-btn" id="notificationDropdown" aria-expanded="false" title="Notifications">
                            <i class="fas fa-bell notification-icon"></i>
                            <span class="notification-badge">3</span>
                        </button>
                        <div class="notification-tooltip">
                            <div class="fw-bold mb-2">Recent Updates</div>
                            <div class="small mb-1">• Added: OS Mid 1 Quiz</div>
                            <div class="small mb-1">• Added: OS Mid 2 Quiz</div>
                            <div class="small mb-1">• Added: OS Lab 1 Quiz</div>
                            <div class="dropdown-divider my-2"></div>
                            <div class="dropdown-item-text small">Check back for more updates!</div>
                        </div>
                    </div>
                    
                    <!-- Leaderboard Icon -->
                    <a href="/leaderboard" class="premium-btn" title="Leaderboard">
                        <i class="fas fa-trophy leaderboard-icon"></i>
                    </a>
                    
                    <!-- Profile Icon -->
                    <a href="/dashboard" class="premium-btn" title="Profile">
                        <i class="fas fa-user profile-icon"></i>
                        <div class="profile-status"></div>
                    </a>
                    
                </div>
            </div>
        </div>
    </header>

    

    <script>
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');
        const themeText = document.getElementById('themeText');
        const body = document.body;

        // Check for saved theme preference or default to light
        const currentTheme = localStorage.getItem('theme') || 'light';
        
        // Apply saved theme on load
        if (currentTheme === 'dark') {
            body.setAttribute('data-theme', 'dark');
            themeIcon.className = 'theme-icon fas fa-sun';
            themeText.textContent = 'Light';
        }

        themeToggle.addEventListener('click', () => {
            const isDark = body.getAttribute('data-theme') === 'dark';
            
            // Add switching animation
            themeIcon.classList.add('switching');
            
            // Toggle theme
            if (isDark) {
                body.removeAttribute('data-theme');
                themeIcon.className = 'theme-icon fas fa-moon';
                themeText.textContent = 'Dark';
                localStorage.setItem('theme', 'light');
            } else {
                body.setAttribute('data-theme', 'dark');
                themeIcon.className = 'theme-icon fas fa-sun';
                themeText.textContent = 'Light';
                localStorage.setItem('theme', 'dark');
            }

            // Remove animation class after animation completes
            setTimeout(() => {
                themeIcon.classList.remove('switching');
            }, 600);
        });

        // Optional: Click outside to close tooltip
        document.addEventListener('click', (e) => {
            const notificationContainer = document.querySelector('.notification-container');
            if (!notificationContainer.contains(e.target)) {
                // Tooltip will hide automatically due to :hover pseudo-class
            }
        });
    </script>
</body>
</html>